<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-6 px-5 px-sm-0">
      <h4 class="my-5 ml-4"><span class="px-4 title">商品詳細</span></h4>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 px-5 px-sm-0 pt-3">
      <%= attachment_image_tag @item, :image, class: "image-size" %>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 px-5 px-sm-0 ml-5 mt-3">
      <h6 class="my-3">商品名</h6>
      <h6 class="my-3">商品説明</h6>
      <h6 class="my-3">
        税込価格</br>
        (税抜価格)
      </h6>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 px-5 px-sm-0 ml-3 mt-3">
      <h6 class="my-3"><%= @item.name %></h6>
      <h6 class="my-3"><%= @item.introduction %></h6>
      <h6 class="my-4"><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</h6>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4 px-5 px-sm-0">
      <p></p>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 px-5 px-sm-0 ml-5">
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success px-4 py-2" %>
    </div>
  </div>


