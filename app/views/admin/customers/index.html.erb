<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-6 px-5 px-sm-0">
      <h4 class="my-5 ml-4"><span class="px-4 title">会員一覧</span></h4>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0 head py-2">
      <strong>会員ID</strong>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 head py-2">
      <strong>氏名</strong>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 px-sm-0 head py-2">
      <strong>メールアドレス</strong>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 head py-2">
      <strong>退会ステータス</strong>
    </div>
  </div>

  <% @customers.each do |customer| %>

  <div class="row justify-content-center">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0 py-3 head-item">
      <%= customer.id %>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 py-3 head-item">
      <%= link_to customer.full_name, admin_customer_path(customer.id), class: "link-color" %>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 px-sm-0 py-3 head-item">
      <%= customer.email %>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 py-3 head-item">
      <%= customer.is_active %>
    </div>
  </div>

  <% end %>
  <%= paginate @customers %>
</div>