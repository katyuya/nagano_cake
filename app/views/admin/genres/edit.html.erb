<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-6 px-5 px-sm-0">
      <h4 class="my-5 ml-4"><span class="px-4 title">ジャンル編集</span></h4>
    </div>
  </div>

  <%= form_with model:@genre, url: {controller: 'admin/genres', action: 'update' } , local:true do |f| %>
    <div class="row mb-5">
      <div class="col-sm-2 col-md-2 col-lg-2 px-5 px-sm-0 text-center">
        <label for="genre">ジャンル名</label>
      </div>
      <div class="col-sm-3 col-md-3 col-lg-3 px-5 px-sm-0">
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-sm-3 col-md-3 col-lg-3 px-5 px-sm-0 ml-5 ">
        <%= f.submit '変更を保存', class: "btn btn-success new-genre" %>
      </div>
    </div>
  <% end %>
</div>
