<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8 px-sm-0">
      <h5 class="mt-4 mb-3 ml-4"><span class="px-4 title">配送先編集</span></h5>
    </div>
  </div>
  <%= form_with model: @address, local:true do |f|%>
  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <%= f.text_field :postal_code, class: "new" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <p>住所</p>
    </div>
    <div class="col-sm-7 col-md-7 col-lg-7 px-sm-0">
      <%= f.text_field :address, class: "new" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <p>宛名</p>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <%= f.text_field :name, class: "new" %>
    </div>
    <div class="col-sm-3 col-md-4 col-lg-4 px-sm-0">
      <p></p>
    </div>
    <div class="col-sm-3 col-md-2 col-lg-2 px-sm-0">
      <%= f.submit "変更内容を保存", class: "btn btn-success btn-sm px-3 ml-sm-5" %>
    </div>
  </div>
  <% end %>
</div>