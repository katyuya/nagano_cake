<div class="container">
  <div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8 px-sm-0">
      <h5 class="mt-4 mb-3 ml-4"><span class="px-4 title">配送先登録/一覧</span></h5>
    </div>
  </div>
  <%= form_with model: @addresse, local:true do |f|%>
  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <p>郵便番号(ハイフンなし)</p>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <%= f.text_field :postal_code, class: "new" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <p>住所</p>
    </div>
    <div class="col-sm-7 col-md-7 col-lg-7 px-sm-0">
      <%= f.text_field :address, class: "new" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 mb-5">
      <p>宛名</p>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0 mb-5">
      <%= f.text_field :name, class: "new" %>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 px-sm-0 mb-5">
      <p></p>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0 mb-5">
      <%= f.submit "新規登録", class: "btn btn-success btn-sm new" %>
    </div>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-1 grid py-2 pl-2">
      <strong>郵便番号</strong>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 head-grid py-2 pl-2">
      <strong>住所</strong>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-1 head-grid py-2 pl-2">
      <strong>宛名</strong>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-2 head-grid py-2 pl-2">
      <strong></strong>
    </div>
  </div>

  <% @addresses.each do |addresse|%>
  <div class="row">
    <div class="col-sm-2 col-md-2 col-lg-1 item-head-grid py-2 pl-2">
      <%= addresse.postal_code %>
    </div>
    <div class="col-sm-4 col-md-4 col-lg-4 item-grid py-2 pl-2">
      <%= addresse.address %>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-1 item-grid py-2 pl-2">
      <%= addresse.name %>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-1 item-grid-link text-right pr-sm-1 py-2 pl-2">
      <%= link_to "編集する", edit_address_path(addresse.id), class: "btn btn-success btn-sm" %>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-1 px-sm-0 item-grid pl-sm-1 py-2">
      <%= link_to "削除する", address_path(addresse.id), method: :delete, class: "btn btn-danger btn-sm" %>
    </div>
  <% end %>
  </div>
</div>
