<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-6 px-5 px-sm-0">
      <h4 class="my-5"><span class="px-4 title">会員情報編集</span></h4>
    </div>
  </div>

  <%= form_with model: @customer, url: customers_path, local:true do |f| %>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>氏名</strong>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :last_name %>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>フリガナ</strong>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>郵便番号</strong>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>住所</strong>
    </div>
    <div class="col-sm-10 col-md-10 col-lg-10 px-sm-0">
      <%= f.text_field :address, class: "customer-edit" %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>電話番号</strong>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <strong>メールアドレス</strong>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="row mb-2">
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <p></p>
    </div>
    <div class="col-sm-5 col-md-4 col-lg-4 px-sm-0">
      <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success mt-4 new" %>
    </div>
    <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
      <p></p>
    </div>
    <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
      <%= link_to "退会する", '/customers/confirmation', class: "btn btn-sm btn-danger mt-4 px-3"%>
    </div>
  </div>
  <% end %>