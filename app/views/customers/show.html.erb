<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-10 col-lg-8 px-sm-0">
        <h5 class="ml-5 my-4"><span class="px-3 title">マイページ</span></h5>
      </div>
    </div>

    <div class="row align-items-center my-3">
      <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
        <h5>登録情報</h5>
      </div>

      <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
        <%= link_to "編集する", edit_customers_path, class: "btn btn-success px-4 py-1" %>
      </div>
    </div>

    <table>
      <tbody>
        <tr>
          <td class="grid pl-2 pr-5 py-2">氏名</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>

        <tr>
          <td class="grid pl-2 pr-5 py-2">カナ</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <td class="grid pl-2 pr-5 py-2">郵便番号</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <td class="grid pl-2 pr-5 py-2">住所</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.address %></td>
        </tr>

        <tr>
          <td class="grid pl-2 pr-5 py-2">電話番号</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <td class="grid pl-2 pr-5 py-2">メールアドレス</td>
          <td class="grid-item pl-2 pr-5 py-2"><%= @customer.email %></td>
        </tr>

        </tr>
      </tbody>
    </table>

    <div class="row align-items-center my-3">
      <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
        <h5>配送先</h5>
      </div>
      <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary px-4 py-1" %>
      </div>
    </div>

    <div class="row align-items-center my-3">
      <div class="col-sm-2 col-md-2 col-lg-2 px-sm-0">
        <h5>注文履歴</h5>
      </div>
      <div class="col-sm-3 col-md-3 col-lg-3 px-sm-0">
        <%= link_to "一覧を見る", orders_path, class: "btn btn-primary px-4 py-1" %>
      </div>
    </div>
  </div>
</main>
