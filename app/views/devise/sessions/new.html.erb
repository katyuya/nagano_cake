<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0">
        <h4 class="my-5"><span class="px-3 title">ログイン</span></h4>
        <h5 class="m-4"><span class="px-3 title">会員の方はこちらからログイン</span></h5>
      </div>
    </div>


    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>


    <div class="row justify-content-center">
      <div class="col-sm-4 col-md-3 col-lg-2 px-5 px-sm-0">
        <%= f.label "メールアドレス" %>
      </div>

      <div class="col-sm-6 col-md-5 col-lg-4 px-5 px-sm-0">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email_field" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-sm-4 col-md-3 col-lg-2 px-5 px-sm-0">
        <%= f.label "パスワード" %>
      </div>

      <div class="col-sm-6 col-md-5 col-lg-4 px-5 px-sm-0">
        <%= f.password_field :password, autocomplete: "current-password", class: "password_field" %>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-sm-4 col-md-3 col-lg-2 ">
        <p></p>
      </div>
      <div class="col-sm-6 col-md-5 col-lg-4 px-5 px-sm-0 my-4">
        <button class="btn btn-primary sign" type="submit">ログイン</button>
      </div>
    </div>



    <% end %>
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0">
        <div class="ml-4 mt-4">
          <h5><span class="px-3 title">会員登録がお済みでない方</span></h5>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0">
        <p class="my-3 text-center"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください</p>
      </div>
    </div>
  </div>
</main>

