<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-11 col-lg-8 px-5 px-sm-0">
        <h4 class="my-5"><span class="px-3">会員情報編集</span></h4>
      </div>
    </div>


    <%= form_with model: @customer, url: edit_customer_registration_path, html: { method: :put } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-sm-2 col-md-2 col-lg-2 px-5 px-sm-0">
        <%= f.label "氏名" %>
      </div>

      <div class="col-sm-3 col-md-3 col-lg-3 px-5 px-sm-0">
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="col-sm-3 col-md-3 col-lg-3 px-5 px-sm-0">
        <%= f.text_field :first_name, autocomplete: "first_name" %>
      </div>
    </div>
    <% end %>


<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
