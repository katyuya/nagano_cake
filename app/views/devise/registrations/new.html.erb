<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
        <h5 class="m-5"><span class="px-3 title">新規会員登録</span></h5>

        <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <table>
            <thead>
              <th></th>
              <th></th>
              <th colspan="3"></th>

            </thead>

            <tbody>

              <tr>
                <td><%= f.label "名前" %></td>
                <td class="pl-5">(性)</td>
                <td><%= f.text_field :last_name, autofocus: true %></td>
                <td class="pl-5">(名)</td>
                <td><%= f.text_field :first_name, autofocus: true %></td>
              </tr>

              <tr>
                <td><%= f.label "フリガナ" %></td>
                <td class="pl-5">(セイ)</td>
                <td><%= f.text_field :last_name_kana, autofocus: true %></td>
                <td class="pl-5">(メイ)</td>
                <td><%= f.text_field :first_name_kana, autofocus: true %></td>
              </tr>

              <tr>
                <td><%= f.label "メールアドレス" %></td>
                <td class="pl-5"></td>
                <td><%= f.email_field :email, autocomplete: "email" %></td>
              </tr>

              <tr>
                <td><%= f.label "郵便番号(ハイフンなし)" %></td>
                <td class="pl-5"></td>
                <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
              </tr>

              <tr>
                <td><%= f.label "住所" %></td>
                <td class="pl-5"></td>
                <td colspan="3"><%= f.text_field :address, autocomplete: "address", class: "address_field" %></td>
              </tr>

              <tr>
                <td><%= f.label "電話番号(ハイフンなし)" %></td>
                <td></td>
                <td><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></td>
              </tr>

              <tr>
                <td><%= f.label "パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
                </td>
                <td class="pl-3"></td>
                <td><%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>

              <tr>
                <td><%= f.label "パスワード(確認用)" %></td>
                <td class="pl-5"></td>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>

              <tr>
                <td></td>
                <td class="pl-5"></td>
                <td><button class="btn btn-success user" type="submit">新規登録</button></td>
              </tr>
            </tbody>
          </table>
        <% end %>
        <div class="ml-5 mt-4">
          <h5><span class="px-3 title">既に登録済みの方</span></h5>

          <p class="my-3 ml-5"><%= link_to "こちら", new_customer_session_path %>からログインしてください</p>
        </div>
      </div>
    </div>
  </div>
</main>
