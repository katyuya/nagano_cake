<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-7 col-lg-6 px-5 px-sm-0">
      <h3 class="my-3">商品一覧<span class="item-number">(全<%= Item.all.count %>件)</span></h3>
    </div>
  </div>

  <div class="row">
    <% @items.each do |item| %>
    <div class="col-sm-3 col-md-3 col-lg-3 p-2 mb-2">
      <%= link_to item_path(item.id) do %>
        <%= attachment_image_tag item, :image, class: "image-size" %>
      <% end %>
      <h6 class="mt-3">商品名：<%= link_to item.name, item_path(item.id) %></h6>
      <h6 class="mt-3">税抜価格：￥<%= item.price.to_s(:delimited) %></h6>
    </div>
    <% end %>
  </div>

  <%= paginate @items %>